<div class="container">
<h1><%= @restaurant.name %></h1>
<%= @restaurant.address %>
<%= @restaurant.category %>
<h2>Reviews</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <%= review.rating %>
    </li>
  <% end %>
</ul>

<h2>New review</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
<%# <%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back to all restaurants', restaurants_path %>
</div>
